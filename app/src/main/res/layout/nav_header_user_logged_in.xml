<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/avatarIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/nav_header_desc"

        android:scaleType="centerCrop"
        app:srcCompat="@drawable/download" />

    <TextView
        android:id="@+id/nav_user_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User's Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/nav_user_email_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="User's mail"
        android:textSize="18dp"


        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nav_user_phone_view"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="User's Phone" />

    <TextView
        android:id="@+id/isVerfaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#357028"
        android:text="Email is Verified"
        android:textSize="16dp" />

</LinearLayout>